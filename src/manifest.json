{
  "name": "Verify Everyone",
  "description": "Give everyone a verified checkmark on Twitter",
  "version": "0.1",
  "permissions": [
    "activeTab",
    "*://tweetdeck.twitter.com/*"
  ],
  "manifest_version": 2,
  "content_scripts": [{
    "js": ["/content-script/content.js"],
    "matches": ["*://tweetdeck.twitter.com/*"],
    "run_at": "document_idle"
  }],
    "icons": {
    "16": "/icons/icon-16.png",
    "48": "/icons/icon-48.png",
    "128": "/icons/icon-128.png"
  },"browser_action": {
    "default_icon": "/icons/icon-16.png"
  }
}
